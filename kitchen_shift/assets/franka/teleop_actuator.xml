<!-- 
Changes:
+ increase gain for gripper fingers, kp=500 -> kp=1350. This allows the gripper 
to open/close faster, which is easier for non-recurrent policies to control
and results in better performance (ie. opening microwave)
-->
<include>
    <size nuser_actuator="5"/>

    <actuator>
        <position name="r_gripper_finger_joint" joint="panda0_finger_joint1" class="panda_finger" kp="1350" forcerange="-70 70" ctrlrange="0 0.04"/> <!-- velocity=".2" -->
        <position name="l_gripper_finger_joint" joint="panda0_finger_joint2" class="panda_finger" kp="1350" forcerange="-70 70" ctrlrange="0 0.04"/> <!-- velocity=".2" -->
    </actuator>
</include>
